@page "{teamID:int}"
@model Gadevang_Tennis_Klub.Pages.Teams.TeamBookingsModel

<h2>Team Members</h2>

<a asp-page="/Teams/GetAllTeams" class="btn btn-secondary mb-3"><i class="fas fa-chevron-left"></i> Back to Teams</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Phone</th>
            @if (Model.IsAdmin)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model.Members)
        {
            <tr>
                <td>@member.Name</td>
                <td>@member.Email</td>
                <td>@member.Dob</td>
                <td>@member.Phone</td>
                @if (Model.IsAdmin)
                {
                    <td>
                        <form method="post" asp-page-handler="RemoveMember">
                            <input type="hidden" name="memberId" value="@member.Id" />
                            <input type="hidden" name="teamId" value="@Model.TeamId" />
                            <button type="submit" class="btn btn-sm btn-danger">Fjern <i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>