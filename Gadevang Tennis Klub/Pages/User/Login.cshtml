@page
@model Gadevang_Tennis_Klub.Pages.User.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center mb-3">Login</h1>
<title>Login</title>

<div class="d-flex justify-content-center">
    <div class="card p-3 align-items-center" style="width:50%">
        <form asp-page-handler="login" method="post" style="width:80%">   
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" placeholder="Email@("@")email.dk" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Kodeord" class="control-label"></label>
                <input asp-for="@Model.Kodeord" class="form-control" placeholder="Kodeord" />
                <span asp-validation-for="@Model.Kodeord" class="text-danger" ></span>
            </div>
            @if (Model.Message != null)
            {
                <p class="text-danger">@Model.Message</p>
            }
            <br />
            <button type="submit" class="btn btn-success">
                Login <i class="fas fa-sign-in"></i>
            </button>
        </form>
    </div>
</div>