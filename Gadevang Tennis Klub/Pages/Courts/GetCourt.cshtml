@page
@model Gadevang_Tennis_Klub.Pages.Courts.GetCourtModel
@{
    ViewData["Title"] = "Bane";
}

<h1>Bane @Model.Court.Name</h1>
@if (Model.IsAdmin)
{
    <div class="text-end">
        <a class="btn btn-primary btn-sm" title="Redigér begivenhed" asp-page="UpdateCourt" asp-route-courtID=@Model.Court.ID><i class="fas fa-edit"></i></a>
        <a class="btn btn-danger btn-sm" title="Slet begivenhed" asp-page="DeleteCourt" asp-route-courtID=@Model.Court.ID><i class="fas fa-trash"></i></a>
    </div>
}

<table class="table table-hover">
    <thead>
        <tr>
            @if (Model.IsAdmin)
            {
                <th>ID</th>
            }
            <th>Navn</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @if (Model.IsAdmin)
            {
                <td>@Model.Court.ID</td>
            }
            <td>@Model.Court.Name</td>
            <td>@Model.Court.Type</td>
        </tr>
    </tbody>
</table>
