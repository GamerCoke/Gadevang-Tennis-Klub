@page
@model Gadevang_Tennis_Klub.Pages.Trainers.ReadAllTrainersModel
@{
    ViewData["Title"] = "Trænere";
}

@if (Model.IsAdmin)
{
    <a asp-page="CreateTrainer"
       class="button btn-success btn-sm">Opret Træner <i class="fa fa-plus-circle" aria-hidden="true"></i></a>
}

<title>Trænere</title>
<table class ="table table-hover">
    <thead>
        <tr>
            <th>Billede</th>
            @if (Model.IsAdmin)
            {
                <th>Id</th>
            }
            <th>Navn</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>Hold</th>
            @if (Model.IsAdmin)
            {
                <th>Handlinger</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var trainer in await Model.TrainerDB.GetAllTrainersAsync())
        {
            <tr>
                <td>
                    @if (trainer.Image == null)
                    {
                        <p>null</p>
                    }
                    else
                    {
                        <img class="img-fluid" src="~/Images/@trainer.Image" alt="@trainer.Name" style="max-width: 100px; max-height: 100px;" />
                    }
                </td>
                @if (Model.IsAdmin)
                {
                    <td>@trainer.Id</td>
                }
                <td>@trainer.Name</td>
                <td>@trainer.Phone</td>
                <td>@trainer.Email</td>
                <td>
                    @{
                        string teams = "| ";
                        foreach (var team in await Model.TeamDB.GetTeamsByTrainerAsync(trainer.Id.ToString()))
                        {
                            teams += team.Name + " | ";
                        }
                        <p>@teams</p>
                    }
                </td>
                @if (Model.IsAdmin)
                {
                    <td>
                        <a asp-page="DeleteTrainer" asp-route-trainerID=@trainer.Id
                           class="button btn-danger btn-sm">Slet<i class="fa fa-trash" aria-hidden="true"></i></a>
                        <br />
                        <a asp-page="UpdateTrainer" asp-route-trainerID=@trainer.Id
                           class="button btn-primary btn-sm">Updater<i class="fas fa-edit"></i></a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<!-- JS function to show an image preview -->
<script>
    function previewImage(trainer) {
        const file = trainer.target.files[0];
        const reader = new FileReader();

        reader.onload = function(e) {
            const image = document.getElementById('imagePreview');
            image.src = e.target.result;
            image.style.display = 'block'; // Show the image
        };

        if (file) {
            reader.readAsDataURL(file);
        }
    }
</script>