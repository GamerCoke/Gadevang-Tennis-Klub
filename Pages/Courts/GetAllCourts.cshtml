@page
@model Gadevang_Tennis_Klub.Pages.Courts.GetAllCourtsModel
@{
    ViewData["Title"] = "Baner";
}

<h1>Bane Overvisning</h1>
<hr />

<div class="row align-items-center mb-3">
    <div class="col">
        <p class="mb-0">Antal Medlemmer: @Model.Courts.Count</p>
    </div>
    @if (Model.IsAdmin)
    {
        <div class="col text-end">
            <a asp-page="CreateCourt" class="btn btn-success" role="button">Opret ny bane</a>
        </div>
    }
</div>

<br />

<table class="table table-hover">
    <thead>
        <tr>
            @if(Model.IsAdmin)
            {
                <th>ID</th>
            }
            <th>Navn</th>
            <th>Type</th>
        </tr>
</thead>

</table>
<div>

</div>