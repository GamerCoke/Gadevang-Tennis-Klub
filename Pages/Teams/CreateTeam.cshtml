@page
@model Gadevang_Tennis_Klub.Pages.Teams.CreateTeamModel
@{
    ViewData["Title"] = "Create Team";
}

<div class="card p-3 mx-auto" style="width:65%">

    <!-- Title & Return button -->
    <div class="d-flex justify-content-between align-items-center">
        <h1>Opret Hold</h1>
    <a asp-page="GetAllTeams" class="btn btn-danger" role="button">Tilbage</a>
    </div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Team.Name" class="control-label">Holdnavn*</label>
            <span asp-validation-for="Team.Name" class="text-danger"></span>
            <input asp-for="Team.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Team.Description" class="control-label">Beskrivelse*</label>
            <span asp-validation-for="Team.Description" class="text-danger"></span>
            <textarea asp-for="Team.Description" class="form-control" rows="3" style="max-height: 175px; overflow-y: auto;"></textarea>
        </div>
        <div class="row mb-2">
            <div class="form-group col-md">
                <label asp-for="Team.Capacity" class="control-label">Kapacitet*</label>
                <span asp-validation-for="Team.Capacity" class="text-danger"></span>
                <input asp-for="Team.Capacity" class="form-control" type="number" min="1" />
            </div>
            <div class="form-group col-md">
                <label asp-for="Team.Price" class="control-label">Pris*</label>
                <span asp-validation-for="Team.Price" class="text-danger"></span>
                <input asp-for="Team.Price" class="form-control" type="number" min="0" step="1" />
            </div>
            <div class="form-group col-md">
                <label asp-for="Team.ActiveDay" class="control-label">Aktiv dag*</label>
                <span asp-validation-for="Team.ActiveDay" class="text-danger"></span>
                <select asp-for="Team.ActiveDay" class="form-control">
                    <option value="">Vælg dag</option>
                    <option>Mandag</option>
                    <option>Tirsdag</option>
                    <option>Onsdag</option>
                    <option>Torsdag</option>
                    <option>Fredag</option>
                    <option>Lørdag</option>
                    <option>Søndag</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Team.Trainer.Id" class="control-label">Træner*</label>
            <span asp-validation-for="Team.Trainer.Id" class="text-danger"></span>
            <select asp-for="Team.Trainer.Id" class="form-select" asp-items="Model.TrainerOptions">
                <option value="">Vælg træner</option>
            </select>
        </div>
        <div class="formgroup">
            <button type="submit" class="btn btn-success" asp-page-handler="CreateTeam">Opret Hold</button>
        </div>
    </form>
</div>
