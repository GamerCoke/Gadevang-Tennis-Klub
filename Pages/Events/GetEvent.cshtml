@page
@using Gadevang_Tennis_Klub.Models
@model Gadevang_Tennis_Klub.Pages.Events.GetEventModel
@{
    ViewData["Title"] = "Event";
}

<!-- Title & Return button -->
<div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-5">
        <!-- Calendar-style date box with a red top and white bottom -->
        <div style="width: 50px; border: 1px solid red; text-align: center; font-family: Arial, sans-serif;">
            <!-- Month section in red -->
            <div style="background-color: red; color: white; padding: 4px 0; font-size: 0.8em;">
                @Model.Event.Start.ToString("MMM", new System.Globalization.CultureInfo("da-DK")).ToUpper()
            </div>
            <!-- Day section in white -->
            <div style="background-color: white; color: black; padding: 6px 0; font-size: 1.2em; font-weight: bold;">
                @Model.Event.Start.Day
            </div>
        </div>
        <!-- Title (placed next to the calendar) -->
        <h3 class="m-0">@Model.Event.Title</h3>
    </div>
    <a asp-page="GetAllEvents" class="btn btn-danger" role="button">Tilbage</a>
</div>

<hr />

<p>Beskrivelse: @Model.Event.Description</p>
<p>Starttidspunkt:@Model.Event.Start</p>
<p>Sluttidspunkt: @Model.Event.End</p>
<p>Lokation: @Model.Event.Location</p>
<p>Max tilmeldinger: @Model.Event.Capacity</p>

<hr />

<p>Activites:</p>
<hr />
@foreach (Activity activity in Model.Activities)
{
    <p>Titel: @activity.Title</p>
    <p>Beskrivelse: @activity.Description</p>
    <p>Starttidspunkt: @activity.Start</p>
    <p>Sluttidspunkt: @activity.End</p>
    <hr />
}