@page "{id:int}"
@model Gadevang_Tennis_Klub.Pages.Forum.UpdateAnnouncementModel
@{
    ViewData["Title"] = "Opdater Besked";
}

<h1>Opdater Besked</h1>

<form method="post">
    <input type="hidden" asp-for="AnnouncementToUpdate.Id" />

    <div class="mb-3">
        <label asp-for="AnnouncementToUpdate.Title" class="form-label"></label>
        <input asp-for="AnnouncementToUpdate.Title" class="form-control" />
        <span asp-validation-for="AnnouncementToUpdate.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AnnouncementToUpdate.Text" class="form-label"></label>
        <textarea asp-for="AnnouncementToUpdate.Text" class="form-control" rows="4"></textarea>
        <span asp-validation-for="AnnouncementToUpdate.Text" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AnnouncementToUpdate.Type" class="form-label"></label>
        <select asp-for="AnnouncementToUpdate.Type" class="form-select">
            <option value="">-- Vælg type --</option>
            <option value="Service">Service</option>
            <option value="Partner">Partner</option>
            <option value="General">General</option>
        </select>
        <span asp-validation-for="AnnouncementToUpdate.Type" class="text-danger"></span>
    </div>

    @if (Model.IsAdmin)
    {
        <div class="form-check">
            <input asp-for="AnnouncementToUpdate.Actual" class="form-check-input" />
            <label asp-for="AnnouncementToUpdate.Actual" class="form-check-label">Er aktuel?</label>
        </div>
    }

    <button type="submit" class="btn btn-primary mt-3">Gem ændringer</button>
</form>
